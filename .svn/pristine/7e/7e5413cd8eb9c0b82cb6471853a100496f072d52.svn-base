<template>
	<view>
		<!-- 原材料详情 -->
		<view v-if="initOk">
			<uni-swiper-dot :info="imgSrc" mode="default" :dotsStyles="dotsStyles">
				<swiper class="swiper-box" style="height: 500rpx">
					<swiper-item v-for="(item, index) in imgSrc" :key="index">
						<view class="swiper-item" @click="imagePreview(index)">
							<image :src="item" mode="aspectFill" style="width: 750rpx; height: 500rpx"></image>
						</view>
					</swiper-item>
				</swiper>
			</uni-swiper-dot>

			<uni-list>
				<uni-section title="主要信息" type="line"></uni-section>
				<uni-list-item title="编号" :note="materialDetails.productNumber"></uni-list-item>
				<uni-list-item title="仓库" :rightText="materialDetails.storageName"></uni-list-item>
				<uni-list-item title="名称" :rightText="materialDetails.materialName"></uni-list-item>
				<uni-list-item v-if="materialDetails.productType" title="类型" :rightText="materialDetails.productType">
				</uni-list-item>
				<uni-list-item title="数量" :rightText="materialDetails.number + ''"></uni-list-item>
				<uni-list-item v-if="materialDetails.weight > 0.0" title="重量"
					:rightText="materialDetails.weight + '' + materialDetails.chargeUnit"></uni-list-item>
				<uni-list-item title="地点" :rightText="materialDetails.storageName"></uni-list-item>
				<uni-list-item v-if="materialDetails.productArea.length > 0" title="产地"
					:rightText="materialDetails.productArea"></uni-list-item>
				<uni-list-item v-if="materialDetails.billNumber.length > 0" title="发票"
					:rightText="materialDetails.billNumber"></uni-list-item>
				<uni-list-item title="状态" :rightText="getState(materialDetails.state)"></uni-list-item>

				<uni-section v-if="
            materialDetails.unitPrice > 0 ||
            materialDetails.wholesalePrice > 0 ||
            materialDetails.retailPrice > 0
          " title="价格" type="line"></uni-section>
				<uni-list-item v-if="materialDetails.unitPrice > 0" :title="'单价/' + materialDetails.chargeUnit"
					:rightText="materialDetails.unitPrice + ' ' + materialDetails.currency"></uni-list-item>
				<uni-list-item v-if="materialDetails.unitPrice > 0" title="总价"
					:rightText="materialDetails.chargeUnit == '粒' || materialDetails.chargeUnit == '件' ?  parseInt(materialDetails.unitPrice*materialDetails.number) + ' ' + materialDetails.currency : parseInt(materialDetails.unitPrice*materialDetails.weight) + ' ' + materialDetails.currency">
				</uni-list-item>
				<uni-list-item v-if="materialDetails.wholesalePrice > 0" :title="'批发单价/' + materialDetails.chargeUnit"
					:rightText="materialDetails.wholesalePrice + ' ' + materialDetails.currency"></uni-list-item>
				<uni-list-item v-if="materialDetails.agentPrice > 0" :title="'代理单价/' + materialDetails.chargeUnit"
					:rightText="materialDetails.agentPrice + ' ' + materialDetails.currency"></uni-list-item>
				<uni-list-item v-if="materialDetails.counterLowestSellPrice > 0" :title="'零售最低单价/' + materialDetails.chargeUnit"
					:rightText="materialDetails.counterLowestSellPrice + ' ' + materialDetails.currency"></uni-list-item>
				<uni-list-item v-if="materialDetails.retailPrice > 0" :title="'零售单价/' + materialDetails.chargeUnit"
					:rightText="materialDetails.retailPrice + ' ' + materialDetails.currency"></uni-list-item>

				<uni-section v-if="
            materialDetails.color.length > 0 ||
            materialDetails.boxNumber.length > 0 ||
            materialDetails.size.length > 0 ||
            materialDetails.paired.length > 0 ||
            materialDetails.certificateNumber.length > 0 ||
            materialDetails.quality.length > 0 ||
            materialDetails.subsection.length > 0 ||
            materialDetails.note.length > 0 ||
            materialDetails.shape.length > 0
          " title="其他参数" type="line"></uni-section>
				<view v-if="materialDetails.certs.length > 0" class="infoItem">
					<view>证书编号：</view>
					<view class="content">
						<view v-for="(cert, index) in materialDetails.certs" :key="index">
							<navigator :url="'./materialDetails?productNumber=' + cert" hover-class="none">
								{{ cert }}
							</navigator>
						</view>
					</view>
				</view>
				<uni-list-item v-if="materialDetails.boxNumber.length > 0" title="盒子编号"
					:rightText="materialDetails.boxNumber"></uni-list-item>
				<uni-list-item v-if="materialDetails.shape.length > 0" title="形状" :rightText="materialDetails.shape">
				</uni-list-item>
				<uni-list-item v-if="materialDetails.color.length > 0" title="颜色" :rightText="materialDetails.color">
				</uni-list-item>
				<uni-list-item v-if="materialDetails.size.length > 0" title="尺寸" :rightText="materialDetails.size">
				</uni-list-item>
				<uni-list-item v-if="materialDetails.paired.length > 0" title="配对" :rightText="materialDetails.paired">
				</uni-list-item>
				<uni-list-item v-if="materialDetails.quality.length > 0" title="品质"
					:rightText="materialDetails.quality"></uni-list-item>
				<uni-list-item v-if="materialDetails.subsection.length > 0" title="品质细分"
					:rightText="materialDetails.subsection"></uni-list-item>
				<uni-list-item v-if="materialDetails.note.length > 0" title="备注" :note="materialDetails.note">
				</uni-list-item>
			</uni-list>

			<uni-section :title="'状态 - ' + getState(materialDetails.state)" type="line"></uni-section>
			<view v-if="materialDetails.stockInOutList.length > 0" class="step" style="padding-bottom: 40rpx">
				<view v-for="(inout, index) in materialDetails.stockInOutList" :key="index">
					<view class="item row">
						<view class="row" style="display: flex;align-items: center;">
							<view class="dot"></view>
							<view class="time">{{ inout.time.slice(0, 10) }}</view>
						</view>
						<view style="margin-left: 20rpx; flex: 1">
							<view class="desc">{{ inout.describe }}</view>
							<text selectable="true" v-if="inout.note.length > 0" class="note">{{ inout.note }}</text>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="login-page">
			<uni-popup ref="popup" type="center">
				<view class="popup-container">
					<view class="popup-one">您还没有登录</view>
					<view class="popup-two">登录即刻开启品质生活</view>
					<view class="popup-login" @click="goToLogin">
						<image src="../static/imgs/mine/login.png" mode="aspectFill"></image>
					</view>
					<view class="popup-cancel" @click="closePopup">取消</view>
				</view>
			</uni-popup>
		</view>
	</view>
</template>

<script>
	export default {
		data() {
			return {
				role: '',
				imgUrl: this.$baseJewelleryUrl,
				initOk: false,
				dotsStyles: {
					selectedBackgroundColor: "#1e92ff",
					selectedBorder: "#1e92ff",
				},
				detailId: null,
				productNumber: "",
				materialDetails: {},
				imgSrc: [],
				states: [{
						id: -1,
						name: "全部",
					},
					{
						id: 0,
						name: "库存中",
					},
					{
						id: 1,
						name: "运输中",
					},
					{
						id: 5,
						name: "未加工",
					},
					{
						id: 2,
						name: "加工中",
					},
					{
						id: 3,
						name: "加工完成",
					},
					{
						id: 4,
						name: "已出售",
					},
				],

				//设置默认的分享参数
				share: {
					title: 'PAULIANA 宝莉安娜高级珠宝',
					path: "/jewelryPackage/materialDetails?id=" + this.detailId,
					imageUrl: '',
					desc: '',
					content: ''
				},
			};
		},
		async onLoad(option) {
			await this.$onLaunched;
			let token = uni.getStorageSync("token");
			if (token == "" || token == null) {
				this.$nextTick(() => {
					this.$refs.popup.open();
				});
			} else {
				if (option.id != undefined)
					this.detailId = option.id;
				else
					this.productNumber = option.productNumber;
					
				let userPermissions = getApp().globalData.userInfo.userPermissions;
				if (userPermissions)
					if (userPermissions.jewelry_user)
						this.role = userPermissions.jewelry_user.seller;
							
				this.getDetails();
			}
		},
		onReady() {
			this.hidePageNavInWechatBrowser();
		},
		onPullDownRefresh() {
			uni.showLoading({
				title: '正在刷新'
			});
			this.getDetails();
			uni.stopPullDownRefresh();
		},
		// 分享好友
		onShareAppMessage(res) {
			this.share.path = "/jewelryPackage/materialDetails?id=" + this.detailId;
			return {
				title: this.share.title,
				path: this.share.path,
				imageUrl: this.share.imageUrl,
				desc: this.share.desc,
				content: this.share.content,
				success: (res) => {
					uni.showToast({
						title: "分享成功",
						icon: "none"
					})
				},
				fail: (res) => {
					uni.showToast({
						title: "分享失败",
						icon: "none"
					})
				}
			}
		},
		// 分享朋友圈
		onShareTimeline(res) {
			this.share.path = "/jewelryPackage/materialDetails?id=" + this.detailId;
			return {
				title: this.share.title,
				path: this.share.path,
				imageUrl: this.share.imageUrl,
				desc: this.share.desc,
				content: this.share.content,
				success: (res) => {
					uni.showToast({
						title: "分享成功",
						icon: "none"
					})
				},
				fail: (res) => {
					uni.showToast({
						title: "分享失败",
						icon: "none"
					})
				}
			}
		},
		methods: {
			getDetails() {
				uni.showLoading({
					title: "加载中......",
				});
				let url = ''
				if (this.detailId > 0)
					url = "/jewelleryInfo?id=" + this.detailId;
				else
					url = "/jewelleryInfo?productNumber=" + this.productNumber;

				uni.request({
					url: this.$baseJewelleryUrl + url,
					header: {
						"content-type": "application/json",
						token: uni.getStorageSync('token')
					},
					complete: (ret) => {
						uni.hideLoading();

						if (this.checkBack(ret, true) == false) return;

						this.materialDetails = ret.data.materialInfo;
						console.log(this.materialDetails)

						uni.setNavigationBarTitle({
							title: this.materialDetails.materialName
						});

						// 产品
						this.imgSrc = [];
						if (this.materialDetails.img != '' && this.materialDetails.img != null) {
							if (this.materialDetails.img.indexOf('|') == -1) {
								this.imgSrc.push(this.imgUrl + '/file/' + this.materialDetails.img)
							} else {
								let p = this.materialDetails.img.split("|");

								for (let i = 0; i < p.length; i++) {
									this.imgSrc.push(this.imgUrl + '/file/' + p[i].trim());
								};
							}
						}

						this.materialDetails.certs = [];
						let certs = [];
						if (this.materialDetails.certificateNumber.indexOf(",") > 0)
							certs = this.materialDetails.certificateNumber.split(",");
						else certs = this.materialDetails.certificateNumber.split("，");
						for (let i = 0; i < certs.length; ++i) {
							let tmp = certs[i].trim();
							if (tmp.length > 0) this.materialDetails.certs.push(tmp);
						}

						this.initOk = true;
					},
				});
			},
			imagePreview(i) {
				uni.previewImage({
					current: i,
					urls: this.imgSrc,
				});
			},
			getState(item) {
				for (let i = 0; i < this.states.length; ++i) {
					if (item == this.states[i].id) return this.states[i].name;
					else if (item == 4) return "已售";
				}
				return "";
			},
			// 去登录页
			goToLogin() {
				this.$refs.popup.close();
				uni.navigateTo({
					url: "../pages/mine/login",
				});
			},
			// 关闭去登录
			closePopup() {
				this.$refs.popup.close();
			},
		},
	};
</script>

