.infoItem {
  display: flex;
  font-size: 26rpx;
  padding: 30rpx;
}
.infoItem .content {
  flex: 1;
  color: #8f8f94;
  text-align: right;
  text-decoration: underline;
}
.step {
  padding: 30rpx 30rpx 10rpx 30rpx;
  background-color: #ffffff;
}
.step .steptitle {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.step .item {
  margin-bottom: 40rpx;
  color: #666666;
}
.step .item .dot {
  width: 20rpx;
  height: 20rpx;
  background-color: #007aff;
  border-radius: 30rpx;
  margin-right: 20rpx;
}
.step .item .time {
  font-size: 24rpx;
}
.step .item .desc {
  font-size: 24rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.step .item .note {
  color: #c0c0c0;
  font-size: 24rpx;
  word-break: break-all;
  word-wrap: break-word;
  margin-top: 10rpx;
}
.step .line {
  margin: 10rpx 16rpx;
  border-left: 1rpx solid #e2ebfd;
  height: 56rpx;
  line-height: 56rpx;
  padding-left: 46rpx;
  font-size: 22rpx;
}
.step .line .yesName {
  color: #b6bac9;
}
.step .line .noName {
  color: #b6bac9;
}

